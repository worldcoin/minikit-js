{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "types": ["node", "jest"],
    "moduleResolution": "bundler",
    "rootDir": "src",
    "baseUrl": "src",
    "typeRoots": ["./node_modules/@types"],
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "build", ".turbo", "coverage"]
}
